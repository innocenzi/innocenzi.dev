---
import Layout from '$/layouts/main.astro'
import Icon from '$/components/icon.vue'
import { formatDate, getReadingTime } from '$/utils/article'
---

<Layout title={Astro.props.content.title}>
	<div class="sm:px-8 mt-16 lg:mt-32 mb-32">
		<div class="mx-auto max-w-7xl lg:px-8">
			<div class="relative px-4 sm:px-8 lg:px-10">
				<div class="mx-auto max-w-2xl lg:max-w-5xl">
					<div class="xl:relative">
						<div class="mx-auto max-w-2xl">
							<a
								aria-label="Go back to articles"
								href="/articles"
								class="group mb-8 flex h-10 w-10 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 transition dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0 dark:ring-white/10 dark:hover:border-zinc-700 dark:hover:ring-white/20 lg:absolute lg:-left-5 lg:mb-0 lg:-mt-2 xl:-top-1.5 xl:left-0 xl:mt-0"
							>
								<Icon icon="arrowLeft" class="h-4 w-4 stroke-zinc-500 transition group-hover:stroke-zinc-700 dark:stroke-zinc-500 dark:group-hover:stroke-zinc-400" />
							</a>
							<article>
								<header class="flex flex-col">
									<h1 class="mt-6 text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
										{Astro.props.content.title}
									</h1>
									<time datetime={Astro.props.frontmatter.date} class="order-first flex items-center text-base text-zinc-400 dark:text-zinc-500">
										<span>{formatDate(Astro.props.frontmatter.date)}</span>
										<span class="ml-4">â€¢</span>
										<span class="ml-4">{getReadingTime(Astro.props.compiledContent())}</span>
									</time>
								</header>
								<div class:list={[
									'mt-8 prose dark:prose-invert mb-16 transition-all',
									'prose-a:text-pink-300 prose-a:font-medium prose-a:underline-offset-4 prose-a:decoration-pink-300/50',
									'hover:prose-a:decoration-pink-300',
								]}>
									<slot />
								</div>
							</article>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>

<style is:global>
.prose :where(pre):not(:where([class~="not-prose"] *)) {
	@apply border border-zinc-700/50 rounded-2xl p-8 overflow-x-auto;
}
</style>
