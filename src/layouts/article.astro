---
import Layout from '$/layouts/main.astro'
import Icon from '$/components/icon.vue'
import { formatDate, getReadingTime } from '$/utils/article'
---

<Layout title={Astro.props.content.title}>
	<div class="sm:px-8 lg:mb-12">
		<div class="mx-auto max-w-7xl lg:px-8">
			<div class="relative px-4 sm:px-8 lg:px-10">
				<div class="mx-auto max-w-2xl lg:max-w-5xl">
					<div class="xl:relative">
						<div class="mx-auto max-w-2xl">
							<a
								aria-label="Go back to articles"
								href="/articles"
								class="group mb-8 flex h-10 w-10 items-center justify-center rounded-full shadow-md shadow-zinc-800/5 transition border border-zinc-700/50 bg-zinc-800 ring-0 ring-white/10 hover:border-zinc-700 hover:ring-white/20 lg:absolute lg:-left-5 lg:mb-0 lg:-mt-2 xl:-top-1.5 xl:left-0 xl:mt-0"
							>
								<Icon icon="arrowLeft" class="h-4 w-4 transition stroke-zinc-500 group-hover:stroke-zinc-400" />
							</a>
							<article>
								<header class="flex flex-col">
									<h1 class="mt-6 text-4xl font-bold tracking-tight text-zinc-100 sm:text-5xl">
										{Astro.props.content.title}
									</h1>
									<time datetime={Astro.props.frontmatter.date} class="order-first flex flex-col md:flex-row md:items-center text-base text-zinc-500">
										<span>{formatDate(Astro.props.frontmatter.date)}</span>
										<span class="hidden md:inline ml-4">â€¢</span>
										<span class="md:ml-4 text-sm md:text-base">{getReadingTime(Astro.props.compiledContent())}</span>
									</time>
								</header>
								<div class:list={[
									'mt-8 prose prose-invert mb-16 prose-a:transition-all text-zinc-300/90',
									'prose-a:text-white prose-a:font-medium prose-a:underline-offset-[6px] prose-a:decoration-zinc-300/50',
									'prose-code:font-semibold prose-code:text-zinc-200',
									'hover:prose-a:decoration-zinc-300',
								]}>
									<slot />
								</div>
							</article>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>

<style is:global>
.prose :where(pre):not(:where([class~="not-prose"] *)) {
	@apply border border-zinc-700/50 rounded-2xl p-8 overflow-x-auto;
}
</style>
