{
  "useTabs": true,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle",
    "arrowFunction.useParentheses": "force",
    "lineWidth": 160
  },
  "malva": {
    "useTabs": true
  },
  "markup": {
    "printWidth": 160,
    "preferAttrsSingleLine": true,
    "vBindStyle": "short",
    "vOnStyle": "short",
    "vForDelimiterStyle": "in",
    "vSlotStyle": "short",
    "vBindSameNameShortHand": true,
    "component.selfClosing": true,
    "html.normal.selfClosing": true,
    "html.void.selfClosing": true,
    "svg.selfClosing": true,
    "formatComments": true
  },
  "exec": {
    "cwd": "${configDir}",
    "commands": [
      {
        "command": "rustfmt",
        "exts": ["rs"]
      },
      {
        "command": "./vendor/bin/mago fmt --stdin-input",
        "exts": ["php"]
      }
    ]
  },
  "excludes": ["**/node_modules", "**/*-lock.json", "**/vendor"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.95.13.wasm",
    "https://plugins.dprint.dev/json-0.21.0.wasm",
    "https://plugins.dprint.dev/markdown-0.20.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.15.1.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.25.1.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm",
    "https://plugins.dprint.dev/exec-0.6.0.json@a054130d458f124f9b5c91484833828950723a5af3f8ff2bd1523bd47b83b364"
  ]
}
